<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<% @articles.each do |article| %>
  <div class="well">
    <p>
      <%= link_to image_tag("like.png", alt:'Like', class:"like_dislike"), like_article_path(id: article.id) %>
    </p>
    <p><%= article.score %></p>
    <p>
      <%= link_to image_tag("dislike.png", alt:'Dislike', class:"like_dislike"), like_article_path(id: article.id) %>
    </p>
    <p><%= link_to article.title, article %></p>
    <p><%= article.username %></p>
    <p><%= article.breaddit_post %></p>
    <p>
      <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %> 
    </p>
  </div>
<% end %>

<br>

